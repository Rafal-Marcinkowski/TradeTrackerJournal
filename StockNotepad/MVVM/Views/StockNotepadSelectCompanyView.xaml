<mah:MetroContentControl
    x:Class="StockNotepad.MVVM.Views.StockNotepadSelectCompanyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:StockNotepad.MVVM.Views"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Button
        Width="300"
        Height="300"
        Margin="5"
        Command="{Binding ConfirmCompanySelectionCommand}"
        CommandParameter="{Binding ElementName=companyListBox, Path=SelectedItem}"
        Style="{StaticResource BigButtonStyle}">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="Wybierz spółkę" />
                <iconPacks:PackIconFontisto
                    Width="30"
                    Height="30"
                    Margin="10,0,0,0"
                    Kind="LineChart" />
            </StackPanel>

            <TextBox
                Width="200"
                Height="30"
                Margin="0,10,0,0"
                Controls:TextBoxHelper.Watermark="Szukaj spółki..."
                BorderBrush="DimGray"
                BorderThickness="2"
                Style="{StaticResource MahApps.Styles.TextBox.Search}"
                Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged, Delay=100}" />
            <ListBox
                x:Name="companyListBox"
                Width="200"
                Height="150"
                Margin="0,5,0,0"
                BorderBrush="DimGray"
                BorderThickness="2"
                IsHitTestVisible="True"
                ItemsSource="{Binding ItemsSource}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <prism:InvokeCommandAction
                            AutoEnable="True"
                            Command="{Binding ConfirmCompanySelectionCommand}"
                            CommandParameter="{Binding ElementName=companyListBox, Path=SelectedItem}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                FontSize="12"
                                FontWeight="DemiBold"
                                Text="{Binding CompanyName}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="0,0,15,0"
                                HorizontalAlignment="Right"
                                FontSize="12"
                                FontWeight="DemiBold"
                                Text="{Binding NoteCount, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Button>

</mah:MetroContentControl>
