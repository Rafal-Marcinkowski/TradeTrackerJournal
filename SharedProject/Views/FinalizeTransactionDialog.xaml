<metro:MetroWindow
    x:Class="SharedProject.Views.FinalizeTransactionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    Title=""
    Width="400"
    Height="250"
    TitleAlignment="Center"
    TitleCharacterCasing="Normal"
    TitleForeground="Black">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock
            Margin="10"
            HorizontalAlignment="Center"
            FontWeight="DemiBold"
            Text="Dodaj komentarz końcowy do transakcji:"
            TextWrapping="Wrap" />

        <TextBox
            x:Name="ClosingCommentTextBox"
            Width="300"
            Height="100"
            Margin="10"
            AcceptsReturn="True"
            TextWrapping="Wrap" />

        <StackPanel
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="5"
                Click="SubmitButton_Click"
                Content="Zatwierdź" />
            <Button
                Width="100"
                Margin="5"
                Click="CancelButton_Click"
                Content="Anuluj" />
        </StackPanel>
    </StackPanel>
</metro:MetroWindow>

