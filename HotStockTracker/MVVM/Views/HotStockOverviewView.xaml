<mah:MetroContentControl
    x:Class="HotStockTracker.MVVM.Views.HotStockOverviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HotStockTracker.MVVM.Views"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" 
                     HorizontalScrollBarVisibility="Auto" 
                     VerticalScrollBarVisibility="Disabled"
                     Padding="5">
            <ItemsControl ItemsSource="{Binding DayItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" 
                                Padding="10" 
                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}" 
                                BorderThickness="1" 
                                MinWidth="350"
                                Width="Auto">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Text="{Binding Date, StringFormat='dd.MM.yyyy'}" 
                                           FontWeight="Bold" 
                                           FontSize="11.2" 
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,5"/>

                                <DataGrid Grid.Row="1" 
                                          ItemsSource="{Binding TopGainers}" 
                                          AutoGenerateColumns="False" 
                                          HeadersVisibility="Column"
                                          IsReadOnly="True" 
                                          SelectionMode="Single"
                                          Margin="0,0,0,5"
                                          FontSize="11.2"
                                          ColumnWidth="auto">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Nazwa" 
                                                            Binding="{Binding Name}" 
                                                            Width="auto"
                                                            MinWidth="100"/>
                                        <DataGridTextColumn Header="Wzrost %" 
                                                            Binding="{Binding ChangePercent, StringFormat={}{0}%}" 
                                                            Width="Auto"
                                                            MinWidth="70"/>
                                        <DataGridTextColumn Header="Obrót" 
                                                            Binding="{Binding Volume}" 
                                                            Width="Auto"
                                                            MinWidth="70"/>
                                        <DataGridTextColumn Header="Dynamika" 
                                                            Binding="{Binding TurnoverDynamicsPercent, StringFormat={}{0}%}" 
                                                            Width="Auto"
                                                            MinWidth="70"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <DataGrid Grid.Row="2" 
                                          ItemsSource="{Binding TopLosers}" 
                                          AutoGenerateColumns="False" 
                                          HeadersVisibility="Column"
                                          IsReadOnly="True" 
                                          SelectionMode="Single"
                                          Margin="0,5,0,0"
                                          FontSize="11.2"
                                          ColumnWidth="SizeToHeader">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Nazwa" 
                                                            Binding="{Binding Name}" 
                                                            Width="*"
                                                            MinWidth="100"/>
                                        <DataGridTextColumn Header="Spadek %" 
                                                            Binding="{Binding ChangePercent, StringFormat={}{0}%}" 
                                                            Width="Auto"
                                                            MinWidth="70"/>
                                        <DataGridTextColumn Header="Obrót" 
                                                            Binding="{Binding Volume}" 
                                                            Width="Auto"
                                                            MinWidth="70"/>
                                        <DataGridTextColumn Header="Dynamika" 
                                                            Binding="{Binding TurnoverDynamicsPercent, StringFormat={}{0}%}" 
                                                            Width="Auto"
                                                            MinWidth="70"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Expander Grid.Row="3" 
                                          Margin="0,10" 
                                          Header="Podsumowanie dnia"
                                          FontSize="10.2"
                                          IsExpanded="{Binding IsSummaryExpanded, Mode=TwoWay}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Summary}" 
                                                   TextWrapping="Wrap"
                                                   FontSize="10.2"
                                                   Visibility="{Binding IsNotEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <TextBox Text="{Binding Summary, UpdateSourceTrigger=PropertyChanged}"
                                                 Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 mah:TextBoxHelper.Watermark="Wpisz podsumowanie..."
                                                 MinHeight="60"
                                                 FontSize="10.2"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"/>

                                        <Button Content="{Binding EditButtonText}"
                                                Command="{Binding ToggleEditCommand}"
                                                Margin="0,5,0,0"
                                                HorizontalAlignment="Right"
                                                FontSize="6"
                                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                                Height="25"
                                                Width="25"/>
                                    </StackPanel>
                                </Expander>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="1" 
                BorderBrush="Gray" 
                BorderThickness="0,1,0,0" 
                Padding="10">
            <TextBlock Text="Sekcja dodawania gorących spółek - do implementacji" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontSize="11.2"/>
        </Border>
    </Grid>
</mah:MetroContentControl>