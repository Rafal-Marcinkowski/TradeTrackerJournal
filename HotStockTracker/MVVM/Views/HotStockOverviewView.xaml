<mah:MetroContentControl
    x:Class="HotStockTracker.MVVM.Views.HotStockOverviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:HotStockTracker.MVVM.Views"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer
            x:Name="DayItemsScrollViewer"
            Grid.Row="0"
            Padding="5"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Days}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Width="Auto"
                            MinWidth="350"
                            Margin="5"
                            Padding="10"
                            BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                            BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Margin="0,0,0,5"
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Foreground="White"
                                    Text="{Binding Date, StringFormat='dd.MM.yyyy'}" />

                                <DataGrid
                                    Grid.Row="1"
                                    Margin="0,0,0,5"
                                    AutoGenerateColumns="False"
                                    ColumnWidth="auto"
                                    FontSize="11.2"
                                    HeadersVisibility="Column"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding TopGainers}"
                                    SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="auto"
                                            MinWidth="100"
                                            Binding="{Binding Name}"
                                            Header="Nazwa" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="70"
                                            Binding="{Binding ChangePercent, StringFormat={}{0}%}"
                                            Header="Wzrost %" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="70"
                                            Binding="{Binding Turnover}"
                                            Header="Obrót" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="70"
                                            Binding="{Binding TurnoverDynamicsPercent, StringFormat={}{0}%}"
                                            Header="Dynamika" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <DataGrid
                                    Grid.Row="2"
                                    Margin="0,5,0,0"
                                    AutoGenerateColumns="False"
                                    ColumnWidth="SizeToHeader"
                                    FontSize="11.2"
                                    HeadersVisibility="Column"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding TopLosers}"
                                    SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
                                            Width="*"
                                            MinWidth="100"
                                            Binding="{Binding Name}"
                                            Header="Nazwa" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="70"
                                            Binding="{Binding ChangePercent, StringFormat={}{0}%}"
                                            Header="Spadek %" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="70"
                                            Binding="{Binding Turnover}"
                                            Header="Obrót" />
                                        <DataGridTextColumn
                                            Width="Auto"
                                            MinWidth="70"
                                            Binding="{Binding TurnoverDynamicsPercent, StringFormat={}{0}%}"
                                            Header="Dynamika" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Expander
                                    Grid.Row="3"
                                    Margin="0,10"
                                    FontSize="10.2"
                                    IsExpanded="{Binding IsSummaryExpanded, Mode=TwoWay}">

                                    <Expander.Header>
                                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="DemiBold"
                                                Text="Podsumowanie dnia" />
                                        </StackPanel>
                                    </Expander.Header>
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="10.2"
                                            Text="{Binding Summary}"
                                            TextWrapping="Wrap"
                                            Visibility="{Binding IsNotEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        <TextBox
                                            MinHeight="60"
                                            mah:TextBoxHelper.Watermark="Wpisz podsumowanie dnia..."
                                            AcceptsReturn="True"
                                            FontSize="10.2"
                                            Text="{Binding Summary, UpdateSourceTrigger=PropertyChanged}"
                                            TextWrapping="Wrap"
                                            Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        <Button
                                            Width="35"
                                            Height="25"
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Right"
                                            Command="{Binding ToggleEditCommand}"
                                            Content="{Binding EditButtonText}"
                                            FontSize="6"
                                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
                                    </StackPanel>
                                </Expander>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border
            Grid.Row="1"
            Padding="10"
            BorderBrush="Gray"
            BorderThickness="0,1,0,0">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="11.2"
                Text="Sekcja dodawania gorących spółek - do implementacji" />
        </Border>
    </Grid>
</mah:MetroContentControl>