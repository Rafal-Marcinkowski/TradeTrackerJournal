<mah:MetroContentControl
    x:Class="SessionOpening.SessionOpeningView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:SessionOpening"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="900"
    d:DesignWidth="1500"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border
            Grid.ColumnSpan="2"
            Padding="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="DimGray"
            BorderThickness="3">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="32"
                FontWeight="DemiBold"
                Foreground="GhostWhite"
                Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{}{0:dd-MM-yyyy}'}" />
        </Border>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <DockPanel
                Grid.Row="1"
                Margin="5"
                VerticalAlignment="top">
                <Button
                    Width="35"
                    Height="35"
                    Margin="5"
                    Background="DimGray"
                    BorderBrush="DimGray"
                    Command="{Binding AddNewItemCommand}">
                    <iconPacks:VaadinIcons
                        Width="20"
                        Height="20"
                        Kind="Plus" />
                </Button>
                <TextBox
                    Width="600"
                    Height="35"
                    AcceptsReturn="True"
                    BorderBrush="DimGray"
                    BorderThickness="2"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Text="{Binding NewItemText, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap"
                    Visibility="{Binding Vis}" />
                <Button
                    Width="30"
                    Height="30"
                    Margin="10,0,0,0"
                    Background="DimGray"
                    BorderBrush="DimGray"
                    Command="{Binding ConfirmNewItemCommand}"
                    Visibility="{Binding Vis}">
                    <iconPacks:PicolIcons Kind="Accept" />
                </Button>
            </DockPanel>

            <DataGrid
                x:Name="Items"
                Grid.Row="0"
                Width="auto"
                Height="auto"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                GridLinesVisibility="None"
                HeadersVisibility="Column"
                HorizontalScrollBarVisibility="Disabled"
                ItemsSource="{Binding OpeningItems}"
                SelectionUnit="Cell">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Setters>
                            <Setter Property="BorderBrush" Value="DimGray" />
                            <Setter Property="BorderThickness" Value="1" />
                        </Style.Setters>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Informacja">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style BasedOn="{StaticResource DataGridHeaderStyleTransactionsOverview}" TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="Width" Value="700" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>

                            <DataTemplate>
                                <Border
                                    Margin="2"
                                    BorderBrush="DimGray"
                                    BorderThickness="2">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Width="600"
                                            Height="auto"
                                            Margin="10"
                                            FontSize="14"
                                            FontWeight="DemiBold"
                                            Foreground="White"
                                            Text="{Binding Text}"
                                            TextWrapping="Wrap" />
                                        <Button
                                            Width="25"
                                            Height="25"
                                            Margin="5,5,0,5"
                                            HorizontalAlignment="Right"
                                            Command="{Binding DataContext.LinkCommand, RelativeSource={RelativeSource AncestorType=mah:MetroContentControl}}"
                                            CommandParameter="{Binding}">
                                            <iconPacks:Material
                                                Width="10"
                                                Height="10"
                                                Kind="InformationSymbol" />
                                        </Button>
                                        <Button
                                            Width="25"
                                            Height="25"
                                            Margin="5,5,5,5"
                                            HorizontalAlignment="Right"
                                            Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=mah:MetroContentControl}}"
                                            CommandParameter="{Binding}">
                                            <iconPacks:Material
                                                Width="10"
                                                Height="10"
                                                Kind="TrashCanOutline" />
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Button
                Width="auto"
                Height="250"
                Margin="2,0,2,0"
                VerticalAlignment="Top"
                Command="{Binding ConfirmCompanySelectionCommand}"
                CommandParameter="{Binding ElementName=companyListBox, Path=SelectedItem}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="Wybierz spółkę" />
                        <iconPacks:PackIconFontisto
                            Width="30"
                            Height="30"
                            Margin="10,0,0,0"
                            Kind="LineChart" />
                    </StackPanel>

                    <TextBox
                        Width="200"
                        Height="30"
                        Margin="0,10,0,0"
                        VerticalAlignment="Center"
                        Controls:TextBoxHelper.Watermark="Szukaj spółki..."
                        BorderBrush="DimGray"
                        BorderThickness="2"
                        Style="{StaticResource MahApps.Styles.TextBox.Search}"
                        Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged, Delay=100}" />
                    <ListBox
                        x:Name="companyListBox"
                        Width="200"
                        Height="150"
                        Margin="0,5,0,0"
                        BorderBrush="DimGray"
                        BorderThickness="2"
                        IsHitTestVisible="True"
                        ItemsSource="{Binding ItemsSource}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <prism:InvokeCommandAction Command="{Binding ConfirmCompanySelectionCommand}" CommandParameter="{Binding ElementName=companyListBox, Path=SelectedItem}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        FontSize="12"
                                        FontWeight="DemiBold"
                                        Text="{Binding CompanyName}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Button>

            <DataGrid
                x:Name="companiesDataGrid"
                Grid.Row="1"
                Grid.Column="1"
                Width="auto"
                Height="auto"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserResizeColumns="False"
                GridLinesVisibility="All"
                HorizontalScrollBarVisibility="Disabled"
                ItemsSource="{Binding OpeningCompanies}"
                SelectionUnit="CellOrRowHeader"
                VirtualizingStackPanel.IsVirtualizing="True"
                VirtualizingStackPanel.VirtualizationMode="Recycling">

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Setters>
                            <Setter Property="BorderBrush" Value="DimGray" />
                            <Setter Property="BorderThickness" Value="1" />
                        </Style.Setters>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="*" Header="Spółka">
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style BasedOn="{StaticResource DataGridHeaderStyleTransactionsOverview}" TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="FontSize" Value="20" />
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>

                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="14*" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="30,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="DemiBold"
                                            Text="{Binding CompanyName}" />
                                        <Button
                                            Grid.Column="1"
                                            Width="25"
                                            Height="25"
                                            Margin="5"
                                            HorizontalAlignment="Right"
                                            Command="{Binding DataContext.DeleteOpeningCompanyCommand, RelativeSource={RelativeSource AncestorType=mah:MetroContentControl}}"
                                            CommandParameter="{Binding}">
                                            <iconPacks:Material
                                                Width="10"
                                                Height="10"
                                                Kind="TrashCanOutline" />
                                        </Button>
                                    </Grid>
                                    <StackPanel
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="DemiBold"
                                            Text="Max cena: " />
                                        <TextBox
                                            Width="250"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="DemiBold"
                                            Text="{Binding MaxPrice, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    </StackPanel>
                                    <StackPanel
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="DemiBold"
                                            Text="Wielkość pozycji: " />
                                        <TextBox
                                            Width="250"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="DemiBold"
                                            Text="{Binding PositionSize, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    </StackPanel>
                                    <StackPanel
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="DemiBold"
                                            Text="Ilość akcji: " />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="DemiBold"
                                            Text="{Binding NumberOfShares, UpdateSourceTrigger=PropertyChanged}" />
                                    </StackPanel>

                                </StackPanel>

                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>
        </Grid>
    </Grid>
</mah:MetroContentControl>
