<mah:MetroWindow
    x:Class="TradeTracker.MVVM.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:TradeTracker.MVVM.Views"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title=""
    Width="1675"
    Height="1000"
    TitleAlignment="Center"
    TitleCharacterCasing="Normal"
    TitleForeground="Black"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="auto"
                Height="auto"
                Margin="0,0,5,0"
                Padding="15"
                Command="{Binding NavigateToTransactionsCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <iconPacks:PackIconModern
                        Width="50"
                        Height="50"
                        Kind="Journal" />
                    <TextBlock
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Dziennik transakcji" />
                </StackPanel>
            </Button>
            <Button
                Width="auto"
                Height="auto"
                Margin="0,0,5,0"
                Padding="15"
                Command="{Binding NavigateToEventsCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <iconPacks:PackIconBootstrapIcons
                        Width="50"
                        Height="50"
                        Kind="Watch" />
                    <TextBlock
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Dziennik zdarzeń" />
                </StackPanel>
            </Button>
            <Button
                Width="auto"
                Height="auto"
                Margin="0,0,5,0"
                Padding="15"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Notatki giełdowe" />
                    <iconPacks:PackIconGameIcons
                        Width="50"
                        Height="50"
                        Kind="Notebook" />
                </StackPanel>
            </Button>
            <Button
                Width="auto"
                Height="auto"
                Margin="0,0,5,0"
                Padding="15"
                Command="{Binding NavigateToSessionOpeningCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Otwarcie sesji" />
                    <iconPacks:PackIconGameIcons
                        Width="50"
                        Height="50"
                        Kind="OpenGate" />
                </StackPanel>
            </Button>
        </StackPanel>

        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="MainRegion" />
    </Grid>
</mah:MetroWindow>
