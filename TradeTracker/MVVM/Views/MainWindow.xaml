<mah:MetroWindow
    x:Class="TradeTracker.MVVM.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:command="http://www.galasoft.ch/mvvmlight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:SharedProject.Helpers;assembly=SharedProject"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:TradeTracker.MVVM.Views"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Title=""
    Width="2000"
    Height="1250"
    TitleAlignment="Center"
    TitleCharacterCasing="Normal"
    TitleForeground="Black"
    mc:Ignorable="d">

    <mah:MetroWindow.Resources>
        <helpers:MenuProvider x:Key="MenuProvider" DataContext="{Binding}" />
    </mah:MetroWindow.Resources>

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button x:Name="SettingsButton" ToolTip="Ustawienia">
                <iconPacks:PackIconMaterial
                    Width="20"
                    Height="20"
                    Kind="Cog" />

                <Button.ContextMenu>
                    <ContextMenu DataContext="{Binding DataContext, Source={StaticResource MenuProvider}}">
                        <MenuItem Header="Spółki">
                            <MenuItem.ItemsSource>
                                <CompositeCollection>

                                    <MenuItem Command="{Binding NavigateToCompanyRenameCommand}" Header="Zmień nazwę spółki">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="RenameBox" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Command="{Binding NavigateToAddCompanyCommand}" Header="Dodaj nową spółkę">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="PlusBox" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Command="{Binding NavigateToDeleteCompanyCommand}" Header="Usuń spółkę">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="Delete" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                </CompositeCollection>
                            </MenuItem.ItemsSource>
                        </MenuItem>

                        <Separator />

                        <MenuItem Header="Narzędzia">
                            <MenuItem.ItemsSource>
                                <CompositeCollection>
                                    <MenuItem Command="{Binding ShowStatsCommand}" Header="Statystyki">
                                        <MenuItem.Icon>
                                            <iconPacks:PackIconMaterial
                                                Width="16"
                                                Height="16"
                                                Kind="ChartBar" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </CompositeCollection>
                            </MenuItem.ItemsSource>
                        </MenuItem>

                        <Separator />

                        <MenuItem Command="{Binding NavigateToSettingsCommand}" Header="Ustawienia aplikacji">
                            <MenuItem.Icon>
                                <iconPacks:PackIconMaterial
                                    Width="16"
                                    Height="16"
                                    Kind="Cog" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Button.ContextMenu>

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:ChangePropertyAction
                            PropertyName="IsOpen"
                            TargetObject="{Binding ContextMenu, ElementName=SettingsButton}"
                            Value="True" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="auto"
                Height="auto"
                Margin="0,0,5,0"
                Padding="15"
                Command="{Binding NavigateToTransactionsCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <iconPacks:PackIconModern
                        Width="50"
                        Height="50"
                        Kind="Journal" />
                    <TextBlock
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Transakcje" />
                </StackPanel>
            </Button>
            <Button
                Width="auto"
                Height="auto"
                Margin="0,0,5,0"
                Padding="15"
                Command="{Binding NavigateToEventsCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <iconPacks:PackIconBootstrapIcons
                        Width="50"
                        Height="50"
                        Kind="Watch" />
                    <TextBlock
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Zdarzenia" />
                </StackPanel>
            </Button>

            <Button
                Width="auto"
                Height="auto"
                Margin="0,0,5,0"
                Padding="15"
                Command="{Binding NavigateToHotStockCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Puls Rynku" />
                    <iconPacks:PackIconGameIcons
                        Width="50"
                        Height="50"
                        Kind="BurningRoundShot" />
                </StackPanel>
            </Button>

            <Button
                Width="auto"
                Height="auto"
                Margin="0,0,5,0"
                Padding="15"
                Command="{Binding NavigateToStockNotepadCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Notatnik" />
                    <iconPacks:PackIconLucide
                        Width="50"
                        Height="50"
                        Kind="NotebookPen" />
                </StackPanel>
            </Button>
            <Button
                Width="auto"
                Height="auto"
                Margin="0,0,5,0"
                Padding="15"
                Command="{Binding NavigateToSessionOpeningCommand}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="10"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Otwarcie sesji" />
                    <iconPacks:PackIconRemixIcon
                        Width="50"
                        Height="50"
                        Kind="DoorOpenLine" />
                </StackPanel>
            </Button>
        </StackPanel>

        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="MainRegion" />
    </Grid>
</mah:MetroWindow>
