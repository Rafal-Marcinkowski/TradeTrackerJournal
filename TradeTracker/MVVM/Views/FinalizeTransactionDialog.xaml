<metro:MetroWindow 
    x:Class="TradeTracker.MVVM.Views.FinalizeTransactionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    Title="" TitleCharacterCasing="Normal" TitleForeground="Black"
    TitleAlignment="Center"
    Height="250" Width="400">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Dodaj komentarz końcowy do transakcji:" 
                   FontWeight="DemiBold"
                   Margin="10" 
                   TextWrapping="Wrap" 
                   HorizontalAlignment="Center" />

        <TextBox x:Name="ClosingCommentTextBox" 
                 Width="300" 
                 Height="100" 
                 Margin="10" 
                 TextWrapping="Wrap" 
                 AcceptsReturn="True" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Zatwierdź" 
                    Width="100" 
                    Margin="5" 
                    Click="SubmitButton_Click" />
            <Button Content="Anuluj" 
                    Width="100" 
                    Margin="5" 
                    Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</metro:MetroWindow>

