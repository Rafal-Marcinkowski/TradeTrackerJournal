<mah:MetroContentControl
    x:Class="TradeTracker.MVVM.Views.AddCompanyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:prism="http://prismlibrary.com/">

    <Grid Margin="5" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <iconPacks:PackIconMaterial
                Width="32"
                Height="32"
                Margin="0,0,10,0"
                Foreground="White"
                Kind="OfficeBuildingPlus" />
            <TextBlock
                FontSize="24"
                FontWeight="DemiBold"
                Foreground="White"
                Text="Dodawanie nowej spółki" />
        </StackPanel>

        <Border
            Grid.Row="1"
            Margin="0,5,0,5"
            Padding="20"
            HorizontalAlignment="Center"
            BorderBrush="{DynamicResource AccentColorBrush}"
            BorderThickness="1"
            CornerRadius="4">
            <StackPanel MinWidth="400">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,3,10,5"
                        FontSize="16"
                        FontWeight="DemiBold"
                        Foreground="White"
                        Text="Nazwa spółki:" />
                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        MinWidth="300"
                        Margin="0,0,0,5"
                        mah:TextBoxHelper.Watermark="Wprowadź nazwę spółki..."
                        FontSize="14"
                        Foreground="White"
                        Style="{StaticResource MahApps.Styles.TextBox}"
                        Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" />


                </Grid>
            </StackPanel>
        </Border>

        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="40"
                Margin="0,0,10,0"
                Command="{Binding CancelCommand}"
                Content="Anuluj" />

            <Button
                Width="150"
                Height="40"
                Command="{Binding SaveCommand}"
                Content="Dodaj spółkę">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Width="20"
                                Height="20"
                                Margin="0,0,10,0"
                                Kind="PlusBox" />
                            <TextBlock VerticalAlignment="Center" Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </StackPanel>
    </Grid>
</mah:MetroContentControl>