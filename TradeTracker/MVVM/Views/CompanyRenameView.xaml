<mah:MetroContentControl
    x:Class="TradeTracker.MVVM.Views.CompanyRenameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Conv="clr-namespace:SharedProject.Converters;assembly=SharedProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:TradeTracker.MVVM.Views"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <mah:MetroContentControl.Resources>
        <Conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <Conv:NullToBoolConverter x:Key="NullToBoolConverter" />
    </mah:MetroContentControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Nagłówek  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="Bold"
            Text="Zmiana nazwy spółki" />

        <!--  Wybór spółki  -->
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button
                Width="auto"
                Height="300"
                Margin="5"
                Command="{Binding ConfirmCompanySelectionCommand}"
                CommandParameter="{Binding ElementName=companyListBox, Path=SelectedItem}"
                Style="{StaticResource BigButtonStyle}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="Wybierz spółkę" />
                        <iconPacks:PackIconFontisto
                            Width="30"
                            Height="30"
                            Margin="10,0,0,0"
                            Kind="LineChart" />
                    </StackPanel>

                    <TextBox
                        Width="200"
                        Height="30"
                        Margin="0,10,0,0"
                        mah:TextBoxHelper.Watermark="Szukaj spółki..."
                        BorderBrush="DimGray"
                        BorderThickness="2"
                        Style="{StaticResource MahApps.Styles.TextBox.Search}"
                        Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged, Delay=100}" />
                    <ListBox
                        x:Name="companyListBox"
                        Width="200"
                        Height="150"
                        Margin="0,5,0,0"
                        BorderBrush="DimGray"
                        BorderThickness="2"
                        IsHitTestVisible="True"
                        ItemsSource="{Binding ItemsSource}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <prism:InvokeCommandAction Command="{Binding ConfirmCompanySelectionCommand}" CommandParameter="{Binding ElementName=companyListBox, Path=SelectedItem}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        FontSize="12"
                                        FontWeight="DemiBold"
                                        Text="{Binding CompanyName}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="0,0,15,0"
                                        HorizontalAlignment="Right"
                                        FontSize="12"
                                        FontWeight="DemiBold"
                                        Text="{Binding TransactionCount}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Button>

            <!--  Panel wybranej spółki  -->
            <Border
                Margin="20,0,0,0"
                Padding="20"
                BorderBrush="{DynamicResource AccentColorBrush}"
                BorderThickness="1"
                Visibility="{Binding SelectedCompany, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Wybrana spółka:" />
                    <TextBlock FontSize="14" Text="{Binding SelectedCompany.CompanyName}" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="12"
                        Foreground="Gray"
                        Text="{Binding SelectedCompany.Market}" />
                </StackPanel>
            </Border>
        </StackPanel>

        <!--  Formularz zmiany nazwy  -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="16"
                FontWeight="Bold"
                Text="Nowa nazwa spółki:" />

            <TextBox
                Width="400"
                Height="40"
                mah:TextBoxHelper.ClearTextButton="True"
                mah:TextBoxHelper.Watermark="Wprowadź nową nazwę..."
                IsEnabled="{Binding SelectedCompany, Converter={StaticResource NullToBoolConverter}}"
                Style="{StaticResource MahApps.Styles.TextBox}"
                Text="{Binding NewCompanyName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--  Przyciski akcji  -->
        <StackPanel
            Grid.Row="3"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="40"
                Margin="0,0,10,0"
                Command="{Binding CancelCommand}"
                Content="Anuluj"
                Style="{StaticResource MahApps.Styles.Button.Square}" />
            <Button
                Width="120"
                Height="40"
                Command="{Binding SaveCommand}"
                Content="Zapisz"
                IsEnabled="{Binding CanSave}"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
        </StackPanel>
    </Grid>
</mah:MetroContentControl>