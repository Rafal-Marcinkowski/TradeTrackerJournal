<mah:MetroContentControl
             x:Class="TradeTracker.MVVM.Views.AddTransactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1500">

    <Border BorderBrush="DimGray" BorderThickness="5" Padding="5" Margin="140,220,140,220">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button 
                Command="{Binding ConfirmCompanySelectionCommand}"
                CommandParameter="{Binding ElementName=companyListBox, Path=SelectedItem}" 
                Style="{StaticResource BigButtonStyle}" Width="auto" Height="300" Margin="5">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Wybierz spółkę" VerticalAlignment="Center" FontSize="16"/>
                        <iconPacks:PackIconFontisto Kind="LineChart" Width="30" Height="30" Margin="10,0,0,0"/>
                    </StackPanel>

                    <TextBox Style="{StaticResource MahApps.Styles.TextBox.Search}"
                             Text="{Binding SearchBoxText, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10,0,0"
                             BorderThickness="2" BorderBrush="DimGray" Width="200" Height="30" 
                             Controls:TextBoxHelper.Watermark="Szukaj spółki..." />
                                    <ListBox x:Name="companyListBox" BorderBrush="DimGray"
                             BorderThickness="2" Width="200" Height="150" Margin="0,5,0,0"
                             ItemsSource="{Binding FilteredCompanies}"
                             IsHitTestVisible="True">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDoubleClick">
                                <prism:InvokeCommandAction Command="{Binding ConfirmCompanySelectionCommand}"
                           CommandParameter="{Binding ElementName=companyListBox, Path=SelectedItem}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding CompanyName}" Grid.Column="0"
                                               FontWeight="DemiBold"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding TransactionCount, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Right"
                                               FontWeight="DemiBold"
                                               FontSize="12"
                                               Margin="0,0,15,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Button>

            <StackPanel VerticalAlignment="Center" Margin="10,0,10,0">
            <Border BorderBrush="DimGray" BorderThickness="4" Padding="5" Margin="5" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Spółka: " 
                       Margin="0,5,0,0"
                       Foreground="White" FontWeight="DemiBold" FontSize="18"/>
                    <TextBlock Text="{Binding SelectedCompanyName}" 
                       Margin="0,5,0,0" 
                       Foreground="White" FontWeight="DemiBold" FontSize="18"/>
                </StackPanel>
            </Border>
            <DockPanel LastChildFill="False"   Margin="0,25,0,25">
                    <TextBox Style="{StaticResource CustomTextBoxStyle}"
                 VerticalAlignment="Top"
                             Margin="25,0,0,0"
                             Width="250"
                 Controls:TextBoxHelper.Watermark="Data wejścia: DD/MM/RRRR HH:MM"
                 Text="{Binding EntryDate, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBox Style="{StaticResource CustomTextBoxStyle}"
                 VerticalAlignment="Top"
                             DockPanel.Dock="Right"
               
                 Controls:TextBoxHelper.Watermark="Średnia cena kupna"
                 Text="{Binding EntryPrice, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>

                <DockPanel LastChildFill="False" Margin="0,25,0,25">
                    <TextBox Style="{StaticResource CustomTextBoxStyle}"
                 VerticalAlignment="Top"
                Margin="0,0,16,0"
                 Controls:TextBoxHelper.Watermark="Ilość akcji"
                 Text="{Binding NumberOfShares, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <TextBox Style="{StaticResource CustomTextBoxStyle}"
                 VerticalAlignment="Top"
                
                 Controls:TextBoxHelper.Watermark="Wielkość pozycji"
                 Text="{Binding PositionSize, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBox Style="{StaticResource CustomTextBoxStyle}"
                 VerticalAlignment="Top"
               DockPanel.Dock="Right"
                 Controls:TextBoxHelper.Watermark="Średnia cena sprzedaży"
                 Text="{Binding AvgSellPrice, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>

                <TextBox Width="500"
                     VerticalAlignment="Top"
                     Style="{StaticResource CustomTextBoxStyle}"
                     Margin="0,25,0,25"
                     Controls:TextBoxHelper.Watermark="Link do informacji"
                     Text="{Binding InformationLink, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Tytuł" Margin="0,0,0,10"
               Foreground="WhiteSmoke" HorizontalAlignment="Center"
               FontWeight="DemiBold" FontSize="18"/>
                <TextBox Width="320" TextWrapping="Wrap"
             Controls:TextBoxHelper.Watermark="Wpisz tytuł informacji..."
             Text="{Binding InitialDescription, UpdateSourceTrigger=PropertyChanged}"
             Style="{StaticResource CustomTextBoxStyle}"/>

                <TextBlock Text="Opis transakcji" Margin="0,25,0,10"
               Foreground="WhiteSmoke" HorizontalAlignment="Center"
               FontWeight="DemiBold" FontSize="18"/>
                <TextBox Width="320" Height="195" TextWrapping="Wrap" FontSize="12"
             Controls:TextBoxHelper.Watermark="Opisz transakcję..."
             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
             Style="{StaticResource CustomTextBoxStyle}"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center">
                <Button 
                    Command="{Binding ClearFieldsCommand}"
                    Grid.Column="5" Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource MahApps.Styles.Button}" Margin="25" VerticalAlignment="Center">
                    <iconPacks:VaadinIcons Kind="Eraser" Width="100" Height="50"></iconPacks:VaadinIcons>
                </Button>
            
                <Button Grid.Column="5" Grid.Row="3" Grid.RowSpan="2" Style="{StaticResource MahApps.Styles.Button}"  Margin="25" VerticalAlignment="Center"
                        Command="{Binding AddTransactionCommand}">
                    <iconPacks:MaterialDesign Kind="SaveAsSharp" Width="100" Height="50"></iconPacks:MaterialDesign>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>

</mah:MetroContentControl>
